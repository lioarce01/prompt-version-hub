# ================================
# PostgreSQL Database Configuration
# ================================
POSTGRES_DB=prompt_version_hub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# ================================
# Backend API Configuration
# ================================
BACKEND_PORT=8000

# Environment: development, production, prod
# Controls security settings like HTTPS-only cookies
ENV=development

# Database URL - for local development (outside Docker)
# For Docker, this is auto-constructed in docker-compose.yml
DATABASE_URL=postgresql+psycopg2://postgres:your_secure_password_here@localhost:5432/prompt_version_hub

# ================================
# JWT Authentication
# ================================
# IMPORTANT: Change this to a strong random string in production!
# Generate with: openssl rand -hex 32
JWT_SECRET=change_me_in_production_use_strong_random_string
JWT_ACCESS_EXPIRES_MIN=15
JWT_REFRESH_EXPIRES_DAYS=7

# ================================
# Admin User Seed
# ================================
# This user is created automatically on first run
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# ================================
# Optional: pgAdmin Configuration
# Uncomment if using pgAdmin service in docker-compose.yml
# ================================
# PGADMIN_EMAIL=admin@example.com
# PGADMIN_PASSWORD=admin
# PGADMIN_PORT=5050

# ================================
# Frontend Configuration
# ================================
# NEXT_PUBLIC_API_URL=http://localhost:8000
# NEXT_PUBLIC_APP_NAME=Prompt Version Hub

# ================================
# Google AI Gemini Configuration
# ================================
# Get your API key from: https://aistudio.google.com/app/apikey
# Leave empty to disable AI prompt generation feature
GOOGLE_GENAI_API_KEY=your_google_api_key_here
GOOGLE_GENAI_MODEL=gemini-2.0-flash-exp

# ================================
# AI Usage Limits
# ================================
# Maximum AI generation requests per user per day
AI_MAX_REQUESTS_PER_USER_PER_DAY=50
# Rate limit per IP address (format: number/period)
# Examples: 10/hour, 100/day, 1000/month
AI_RATE_LIMIT_PER_IP=10/hour
